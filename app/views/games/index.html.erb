<!-- Search Form for ad-->
<div class="form">
          <h1>Search for games by address</h1>
            <%= form_tag games_path, method: :get, id: :search_form do %>
              <%= text_field_tag :address, params[:address], class: "form-style", placeholder: "Search by address" %>
              <%= submit_tag "Find a game", class: "home-button" %>
            <% end %>
  </div>

<!-- GAME LIST -->

<% @games.each do |game| %>
 <li> <%= link_to "See game", game %>
<%= game.address %> </li>
<% end %>

<!-- MAP -->

<div id="map"
     style="width: 100%;
     height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%# raise %>
