
<!-- Search Form for ad-->
  <div class="game-form">

    <%= form_tag games_path, method: :get, id: :search_form do %>
      <%#= select_tag :address, params[:address], id: "games-search-bar", placeholder: "Enter your address" %>
      <select name="address" id="games-search-bar" placeholder="Search for games">
        <% @addresses.each do |add| %>
          <option value="<%= add %>"><%= add %></option>
        <% end %>
      </select>
      <%= hidden_field_tag :hidden_filter, params[:hidden_filter] || params[:filter][:sports] %>
      <%= submit_tag "Find a game", class: "search-button" %>
    <% end %>
  </div>

  <!-- GAME LIST -->
  <div class="wrapping_games">
    <div class="w70">
      <% @games.each do |game| %>
      <%= link_to game_path(game), :id => "card-link" do %>
        <div class="game-card">
          <div class="game-card-top">
            <p><%= image_tag "#{game.sport.downcase}.svg", alt: "alttext", :id => "sport-logo-small" %></p>
            <p><i class="fas fa-clock"></i> <%= game.time.strftime("%I:%M%p") %></p>
          </div>

          <div class="game-card-body">
            <% if game.team.user && game.team.user.photo.attached? %>
              <%= cl_image_tag game.team.user.photo.key, class: 'avatar-bordered' %>
            <% else %>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" />
            <% end %>
              <br>
              <h1 class="team-font"><%= game.team.name %></h1>
              <p class="pb-0"><%= game.format %></p>
              <p><%= game.date.strftime('%a %d %b %Y') %></p>
            <!--   <p>Address: <%= game.address %> (x distance from me)</p> -->

          </div>

          <div class="game-card-bottom">
            <p> Spaces: <%= game.remaining_spots %></h2>
              <% if current_user.address.present? %>
                <% dist = '' %>
                <% dist = Geocoder::Calculations.distance_between(Geocoder.coordinates(current_user.address), [game.latitude, game.longitude]) %>
                <h2><%= dist.round(1) %> miles</h2>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- MAP -->

    <div id="map"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

    </div>
  </div>


