</div>

<!-- <a id="play-now"></a> -->
<div class="logo-container cursor: pointer;">
<%= simple_form_for :filter, url: games_path, method: :get do |f| %>
  <fieldset class="form-group check_boxes required filter_sports ">
    <legend class="col-form-label text-center"><h1 class="pb-3 sub-header-text"><strong>C h o o s e // S p o r t</strong></h1><abbr title="required"></abbr></legend>
    <a id="play-now"></a>
    <br>
<!--     <input type="hidden" name="filter[sports][]" value="Find me a game!" class="text-center">
 -->    <% Game::SPORTS.each do |sport| %>
    <div class="form-check custom-control custom-checkbox custom-control-inline align-center">
      <input class="form-check-input check_boxes required" type="checkbox" value="<%= sport %>" name="filter[sports][]" id="filter_sports_<%= sport.downcase %>">
      <label class="form-check-label collection_check_boxes" for="filter_sports_<%= sport.downcase %>"><%= image_tag("#{sport.downcase}.svg", id: "sport-logo") %></label>
    </div>
    <% end %>
  </fieldset>
  <div class="text-center pt-2">
  <%= f.submit 'Let\'s play', :class => 'main-button', :id => 'lets-play-btn' %>
  </div>
<% end %>
</div>

