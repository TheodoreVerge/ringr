<div class="background-banner">
  <div class="main-info">

    <div class="text-container">
      <br>
      <br>
      <br>
      <h1 class="header-text">Find players.</h1>
      <h1 class="header-text">Find a team.</h1>
      <h1 class="header-text">Play today.</h1>
      <h3 class="sub-header-text">Ringr seamlessly matches competitive sports teams with players at short notice.</h3>
    </div>

    <div class="d-flex align-center">
      <div class="p-3"><%= link_to "Create a team", new_team_path, :class => "main-button" %></div>
      <div class="p-3"><a href="#find-out-more" class="main-button">Find out more</a></div>
    </div>
  </div>

  <div class="background-collage" style="background-image: url(<%= asset_path "improved-collage.png" %>);"></div>
</div>





<!-- INPUT LIST FOR SPORT SELECTION -->

<%= simple_form_for :filter, url: games_path, method: :get do |f| %>
  <fieldset class="form-group check_boxes required filter_sports">
    <legend class="col-form-label pt-0">What Sports do you want to play? <abbr title="required">*</abbr></legend>
    <input type="hidden" name="filter[sports][]" value="">
    <% Game::SPORTS.each do |sport| %>
    <div class="form-check logo-container col ">
      <input class="form-check-input check_boxes required" type="checkbox" style="display:none" value="<%= sport %>" name="filter[sports][]" id="filter_sports_<%= sport.downcase %>">
      <label class="form-check-label collection_check_boxes" for="filter_sports_<%= sport.downcase %>"><%= image_tag("#{sport.downcase}.svg", id: "sport-logo") %></label>
    </div>
    <% end %>
  </fieldset>

  <%= f.submit %>
<% end %>


