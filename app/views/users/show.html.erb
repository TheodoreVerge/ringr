
<div>
  <!-- USER INFO -->
  <% if user_signed_in? && current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key %>
  <% end %>
  <h2><%= @user.first_name %> <%= @user.last_name %></h2>
  <p><%= @user.email %></p>
</div>

  <!-- USER BOOKINGS -->
<div>
  <h5>Accepted Bookings</h5>
  <div class="card">
      <% current_user.requested_bookings.each do |booking| %>
      <% if booking.status == "accepted" %>
    <h5 class="card-header"><%= booking.status %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= booking.game.team.name %></h5>
      <p class="card-text"><%= booking.game.address %></p>
      <p class="btn"> <%= link_to "View game details", game_path(booking.game) %></p>
    <% end %>
    <% end %>
    </div>
  </div>
</div>


<!-- BOOKINGS FROM OTHER USERS -->
<h5>Bookings other people have requested</h5>
<% @user.requested_bookings.each do |booking| %>
  <p><%= booking.status %> booking to <%= booking.game.team.name %> by <%= booking.user.first_name %></p>
  <%= link_to "accept", booking_path(booking, booking: {status: "accepted"}), method: :patch  %>
  <%= link_to "reject", booking_path(booking, booking: {status: "rejected"}), method: :patch  %>
<% end %>

<!-- USER TEAMS -->

<h2>Your Teams <%current_user.teams.each do |team|%></h2>
  <li><%= link_to "#{team.name}", team_path(team) %>
  <p><%= link_to "Create a game", new_team_game_path(team) %> </li>
  <% end %>

<!-- USER CREATED GAMES -->

<h2>Games you created <%current_user.teams.each do |team|%></h2>
 <% team.games.each do |game|%>
 <li><%= link_to "See game info", game_path(game) %> <%= game.address%> @ <%= game.time %> </li>
  <% end %>
  <% end %>
