<div class="profile-page-layout">
  <div class="profile-info-div">
    <!-- USER INFO -->
    <div class="profile-info-details">
      <% if user_signed_in? && current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key %>
      <% end %>
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <p>Email: <%= @user.email %></p>
      <p>DOB: <%= @user.date_of_birth %></p>
      <p><em><%= @user.profile %></em></p>
    </div>
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">My Requests</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">My Teams</a>
      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">My Ringr Searches</a>
      <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Unsucessful Requests</a>
    </div>
  </div>
  <div class="profile-content">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <!-- My requests -->
        <div class="my-requests-container">
          <div class="upcoming">
            <h2 class="your-team-heading">Confirmed Games</h2>
            <div class="items your-team-cards">
              <% if @upcoming.empty? %>
              <div class="empty-card">
                <div class="profile-card-body">
                  <h5 class="card-title">You dont have any current bookings</h5>
                  <p class="card-text">Go check out all available games to find one that works for you!</p>
                  <p><%= link_to "View all games", games_path %></p>
                </div>
              </div>
              <% end %>
              <% @upcoming.each do |booking| %>
              <div class="flip-card">
                <div class="flip-card-inner">
                  <div class="flip-card-front">
                    <h2 class="card-title"><%= image_tag "#{booking.game.sport.downcase}.svg", alt: "alttext", :id => "sport-logo-small" %><%= booking.game.team.name %><%= image_tag "#{booking.game.sport.downcase}.svg", alt: "alttext", :id => "sport-logo-small" %></h2>
                    <h5><%= booking.game.countdown %> Days</h5>
                  </div>
                  <div class="flip-card-back">
                    <h4><%= booking.game.address %></h4>
                    <p><%= booking.game.date.strftime('%d-%m-%Y') %></p>
                    <p><%= link_to "View game details", game_path(booking.game) %></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
          <div class="Pending">
            <h2 class="your-team-heading"> Pending Games </h2>
            <div class="items your-team-cards">
              <% if @pending.empty? %>
              <div class="empty-card">
                <div class="profile-card-body">
                  <h5 class="card-title">You dont have any pending requests</h5>
                  <p class="card-text">Go check out all available games to find one that works for you!</p>
                  <p><%= link_to "View all games", games_path %></p>
                </div>
              </div>
              <% end %>
              <% @pending.each do |booking| %>
              <div class="flip-card">
                <div class="flip-card-inner">
                  <div class="flip-card-front">
                    <h2 class="card-title"><%= image_tag "#{booking.game.sport.downcase}.svg", alt: "alttext", :id => "sport-logo-small" %><%= booking.game.team.name %><%= image_tag "#{booking.game.sport.downcase}.svg", alt: "alttext", :id => "sport-logo-small" %> </h2>
                  </div>
                  <div class="flip-card-back">
                    <h4><%= booking.game.address %></h4>
                    <p><%= booking.game.date.strftime('%d-%m-%Y') %></p>
                    <p><%= link_to "View game details", game_path(booking.game) %></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
        <!-- My Teams -->
        <h2 class="your-team-heading"> Your Teams </h2>
        <div class="my-teams-container">
          <!-- User Teams -->
          <div class="items your-team-cards">
            <% current_user.teams.each do |team|%>
            <div class="empty-card">
              <div class="profile-card-body">
                <h3 style="none"> <%= link_to team.name, team_path(team) %></h3>
                <%= link_to "Create a new game for this team", new_team_game_path(team) %>
              </div>
            </div>
            <% end %>
          </div>
          <h4>or</h4>
          <div class="p-3 team-button-create"><%= link_to "Create a new team", new_team_path, :class => "main-button" %></div>
        </div>
      </div>

      <!-- Ringr Search  -->
      <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
        <div class="ringr-search-container">
          <div class="upcoming">
            <h2 class="your-team-heading">Accepted Bookings</h2>
            <div class="items your-team-cards">
              <% @user.requested_bookings.each do |booking| %>
                <% if booking.status == "accepted" %>
                  <div class="empty-card">
                    <div class="profile-card-body">
                        <p><%= booking.user.first_name %> has been confirmed to play with <%= booking.game.team.name %> on <%= booking.game.date.strftime('%a %d %b %Y') %> <%= booking.game.time.strftime("at %I:%M%p") %></p>
                        <p>Current status: <%= booking.status %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="requested">
            <h2 class="your-team-heading">Requested Bookings</h2>
            <div class="items your-team-cards">
              <% @user.requested_bookings.each do |booking| %>
                <% if booking.status == "requested" %>
                  <div class="empty-card">
                    <div class="profile-card-body">
                      <p><%= booking.user.first_name %> would like to join your team <%= booking.game.team.name %> on <%= booking.game.date.strftime('%a %d %b %Y') %> <%= booking.game.time.strftime("at %I:%M%p") %></p>
                      <p>Current status: <%= booking.status %></p>
                      <%= link_to "Accept", booking_path(booking, booking: {status: "accepted"}), method: :patch  %>
                      <%= link_to "Reject", booking_path(booking, booking: {status: "rejected"}), method: :patch  %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>


      <!-- Unsucessful -->
      <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
        <div class="games-container">
          <h2 class="your-team-heading">Unsucessful Requests</h2>
          <div class="items your-team-cards">
            <% if @unsuccesful.empty? %>
            <div class="empty-card">
              <div class="profile-card-body">
                <h5 class="card-title">You haven't got any pending booking requests</h5>
                <p class="card-text">Go check out all available games to find one that works for you!</p>
                <p class="btn"><%= link_to "View all games", games_path %></p>
              </div>
            </div>
            <% end %>
            <% @unsuccesful.each do |booking| %>
            <div class="items your-team-cards">
              <div class="profile-card-body">
                <h5 class="card-title"> <%= booking.game.team.name %></h5>
                <p class="card-text"><%= booking.game.address %></p>
                <p class="card-text">Unfortunately your request was not accepted. Please search other games that might suit you!</p>
                <p class="btn"><%= link_to "View all games", games_path %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
